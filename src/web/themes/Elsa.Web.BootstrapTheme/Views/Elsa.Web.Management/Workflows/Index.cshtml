@model ICollection<Elsa.Models.Workflow>

<div>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@T["Workflows"]</h1>
        <div class="btn-toolbar mb-2 mb-md-1">
            <nav class="admin-toolbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="btn btn-sm btn-primary" asp-action="New">@T["Create Workflow"]</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <table id="dataTable" class="table table-striped table-bordered dataTable" width="100%" role="grid" aria-describedby="dataTable_info" style="width: 100%;" data-turbolinks="false">
        <thead>
        <tr role="row">
            <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Id: activate to sort column ascending" style="width: 214px;">ID</th>
            <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 281px;">Name</th>
            <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 413px;">Description</th>
            <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 214px;">Actions</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th rowspan="1" colspan="1">ID</th>
            <th rowspan="1" colspan="1">Name</th>
            <th rowspan="1" colspan="1">Description</th>
            <th rowspan="1" colspan="1">Actions</th>
        </tr>
        </tfoot>
        <tbody>
        @{
            var index = 0;
        }
        @foreach (var workflowDefinition in Model)
        {
            var rowClass = index % 2 == 0 ? "even" : "odd";
            index++;

            <tr role="row" class="@rowClass">
                <td>
                    <a asp-area="Elsa.Web.Management" asp-controller="Workflows" asp-action="Edit" asp-route-id="@workflowDefinition.Metadata.Id">@workflowDefinition.Metadata.Id</a>
                </td>
                <td class="sorting_1">@workflowDefinition.Metadata.Name</td>
                <td>@workflowDefinition.Metadata.Description</td>
                <td><a asp-area="Elsa.Web.Management" asp-controller="Workflows" asp-action="Edit" asp-route-id="@workflowDefinition.Metadata.Id">edit</a> | delete | enable</td>
            </tr>
        }
        </tbody>
    </table>

</div>